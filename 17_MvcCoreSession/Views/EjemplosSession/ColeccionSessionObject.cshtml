@model IEnumerable<_17_MvcCoreSession.Models.Persona>

@{
    ViewData["Title"] = "ColeccionSessionObject";

    List<Persona> personas = Context.Session.GetObject<List<Persona>>("LISTAPERSONASOBJECT");
}

<h1>ColeccionSessionObject</h1>

<a asp-controller="EjemplosSession" asp-action="ColeccionSessionObject" asp-route-accion="almacenar">Almacenar coleccion</a>
<a asp-controller="EjemplosSession" asp-action="ColeccionSessionObject" asp-route-accion="mostrar">Mostrar coleccion</a>

<h3>@ViewData["MENSAJE"]</h3>


@if(personas != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edad)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in personas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edad)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
